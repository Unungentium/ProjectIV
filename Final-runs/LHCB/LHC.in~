# -*- ThePEG-repository -*-

##################################################
# Example generator based on LHC parameters
# usage: Herwig read LHC.in
##################################################

read snippets/PPCollider.in

cd /Herwig/Shower

create Herwig::QtoQBcSplitReduced QtoQBcSplitReduced QtoQBcSplitReduced.so
set QtoQBcSplitReduced:Alpha AlphaQCD
set QtoQBcSplitReduced:Cutoff PTCutOff
set QtoQBcSplitReduced:PDFmax 2.0
set QtoQBcSplitReduced:ColourStructure TripletTripletSinglet
set QtoQBcSplitReduced:AngularOrdered Yes
set QtoQBcSplitReduced:StrictAO Yes
set QtoQBcSplitReduced:InteractionType QCD
#set QtoQBcSplitReduced:O1 10.
do SplittingGenerator:AddFinalSplitting c->b,B_c+; QtoQBcSplitReduced
do SplittingGenerator:AddFinalSplitting b->c,B_c-; QtoQBcSplitReduced
create Herwig::Q2QBcstarSplitting Q2QBcstarSplitting Q2QBcstarSplitting.so
set Q2QBcstarSplitting:Alpha AlphaQCD
set Q2QBcstarSplitting:Cutoff PTCutOff
set Q2QBcstarSplitting:PDFmax 2.0
set Q2QBcstarSplitting:ColourStructure TripletTripletSinglet
set Q2QBcstarSplitting:AngularOrdered Yes
set Q2QBcstarSplitting:StrictAO Yes
set Q2QBcstarSplitting:InteractionType QCD
#set Q2QBcstarSplitting:O1 10.
do SplittingGenerator:AddFinalSplitting c->b,B_c*+; Q2QBcstarSplitting
do SplittingGenerator:AddFinalSplitting b->c,B_c*-; Q2QBcstarSplitting
create Herwig::QtoQBcSplit1p1 QtoQBcSplit1p1 QtoQBcSplit1p1.so
set QtoQBcSplit1p1:Alpha AlphaQCD
set QtoQBcSplit1p1:Cutoff PTCutOff
set QtoQBcSplit1p1:PDFmax 2.0
set QtoQBcSplit1p1:ColourStructure TripletTripletSinglet
set QtoQBcSplit1p1:AngularOrdered Yes
set QtoQBcSplit1p1:StrictAO Yes
set QtoQBcSplit1p1:InteractionType QCD
#set QtoQBcSplit1p1:O1 10.
do SplittingGenerator:AddFinalSplitting c->b,B_c1+; QtoQBcSplit1p1
do SplittingGenerator:AddFinalSplitting b->c,B_c1-; QtoQBcSplit1p1
create Herwig::QtoQBcSplit3p0 QtoQBcSplit3p0 QtoQBcSplit3p0.so
set QtoQBcSplit3p0:Alpha AlphaQCD
set QtoQBcSplit3p0:Cutoff PTCutOff
set QtoQBcSplit3p0:PDFmax 2.0
set QtoQBcSplit3p0:ColourStructure TripletTripletSinglet
set QtoQBcSplit3p0:AngularOrdered Yes
set QtoQBcSplit3p0:StrictAO Yes
set QtoQBcSplit3p0:InteractionType QCD
#set QtoQBcSplit3p0:O1 10.
do SplittingGenerator:AddFinalSplitting c->b,B*_c0+; QtoQBcSplit3p0
do SplittingGenerator:AddFinalSplitting b->c,B*_c0-; QtoQBcSplit3p0
create Herwig::QtoQBcSplit3p1 QtoQBcSplit3p1 QtoQBcSplit3p1.so
set QtoQBcSplit3p1:Alpha AlphaQCD
set QtoQBcSplit3p1:Cutoff PTCutOff
set QtoQBcSplit3p1:PDFmax 2.0
set QtoQBcSplit3p1:ColourStructure TripletTripletSinglet
set QtoQBcSplit3p1:AngularOrdered Yes
set QtoQBcSplit3p1:StrictAO Yes
set QtoQBcSplit3p1:InteractionType QCD
#set QtoQBcSplit3p1:O1 10.
do SplittingGenerator:AddFinalSplitting c->b,B'_c1+; QtoQBcSplit3p1
do SplittingGenerator:AddFinalSplitting b->c,B'_c1-; QtoQBcSplit3p1
create Herwig::QtoQBcSplit3p2 QtoQBcSplit3p2 QtoQBcSplit3p2.so
set QtoQBcSplit3p2:Alpha AlphaQCD
set QtoQBcSplit3p2:Cutoff PTCutOff
set QtoQBcSplit3p2:PDFmax 2.0
set QtoQBcSplit3p2:ColourStructure TripletTripletSinglet
set QtoQBcSplit3p2:AngularOrdered Yes
set QtoQBcSplit3p2:StrictAO Yes
set QtoQBcSplit3p2:InteractionType QCD
#set QtoQBcSplit3p2:O1 10.
do SplittingGenerator:AddFinalSplitting c->b,B_c2+; QtoQBcSplit3p2
do SplittingGenerator:AddFinalSplitting b->c,B_c2-; QtoQBcSplit3p2
##################################################
# Technical parameters for this run
##################################################
cd /Herwig/Generators

##################################################
# LHC physics parameters (override defaults here) 
##################################################

########################
## sqrt(s) = 13000 GeV ##
########################
set EventGenerator:EventHandler:LuminosityFunction:Energy 13000.0
#set /Herwig/Shower/ShowerHandler:MPIHandler NULL
#set EventGenerator:EventHandler:HadronizationHandler NULL
set /Herwig/Analysis/Basics:CheckQuark 0
set /Herwig/Cuts/JetKtCut:MinKT 10
##################################################
# Matrix Elements for hadron-hadron collisions 
# (by default only gamma/Z switched on)
##################################################
cd /Herwig/MatrixElements/

#
#  Electroweak boson W/Z processes
#
# Drell-Yan Z/gamma
insert SubProcess:MatrixElements[0] MEHeavyQuark
set MEHeavyQuark:QuarkType Charm
cp MEHeavyQuark MEHeavyQuark2
set MEHeavyQuark2:QuarkType Bottom
insert SubProcess:MatrixElements[0] MEHeavyQuark2
cd /Herwig/Generators

##################################################
## prepare for Rivet analysis or HepMC output
## when running with parton shower
##################################################
read snippets/Rivet.in
insert /Herwig/Analysis/Rivet:Analyses 0 LHCB_2019_I1762092
#insert /Herwig/Analysis/Rivet:Analyses 0 MC_BC
#read snippets/HepMC.in
#set /Herwig/Analysis/HepMC:PrintEvent NNN

##################################################
# Save run for later usage with 'Herwig run'
##################################################
saverun LHC EventGenerator
