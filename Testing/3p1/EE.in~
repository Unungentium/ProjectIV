##################################################
# base parameters for LEP analyses
##################################################
read snippets/EECollider.in
##################################################
# Technical parameters for this run
##################################################
cd /Herwig/Generators
set EventGenerator:MaxErrors 100000

##################################################
#  Switch off ISR
##################################################
set /Herwig/Particles/e-:PDF /Herwig/Partons/NoPDF
set /Herwig/Particles/e+:PDF /Herwig/Partons/NoPDF


##################################################
## Shower and scheme selection.
## Should be empty unless using the Dipole Shower.
##################################################


##################################################
#  Create the Herwig analysis
##################################################
cd /Herwig/Generators
create ThePEG::RivetAnalysis /Herwig/Analysis/RivetAnalysis RivetAnalysis.so
insert EventGenerator:AnalysisHandlers 0 /Herwig/Analysis/RivetAnalysis
insert /Herwig/Analysis/RivetAnalysis:Analyses 0 MC_BC_Simple

##################################################
#  Use the q qbar matrix element
##################################################
# default e+e- > q qbar (5 flavours d,u,s,c,b)
cd /Herwig/MatrixElements
insert SubProcess:MatrixElements 0 MEee2gZ2qq
set MEee2gZ2qq:MinimumFlavour 5
set MEee2gZ2qq:MaximumFlavour 5


set /Herwig/Shower/PartnerFinder:QEDPartner IIandFF
set /Herwig/Generators/EventGenerator:EventHandler:LuminosityFunction:Energy 1000.
set /Herwig/Generators/EventGenerator:EventHandler:HadronizationHandler NULL
set /Herwig/Generators/EventGenerator:EventHandler:DecayHandler NULL
set /Herwig/Analysis/Basics:CheckQuark No
set /Herwig/Particles/c:ConstituentMass 1.5
set /Herwig/Particles/d:ConstituentMass 1e-10
set /Herwig/Particles/u:ConstituentMass 1e-10
set /Herwig/Particles/g:ConstituentMass 1e-9

##################################################
# Save run for later usage with 'Herwig run'
##################################################
cd /Herwig/Shower

cd /Herwig/Shower

cp  PTCutOff PTCutOff2
set PTCutOff2:pTmin 0.001
create Herwig::QtoQBcSplit1p1 QtoQBcSplit1p1 QtoQBcSplit1p1.so
set QtoQBcSplit1p1:Alpha AlphaQCD
set QtoQBcSplit1p1:Cutoff PTCutOff2
set QtoQBcSplit1p1:PDFmax 2.0
set QtoQBcSplit1p1:ColourStructure TripletTripletSinglet
set QtoQBcSplit1p1:AngularOrdered Yes
set QtoQBcSplit1p1:StrictAO Yes
set QtoQBcSplit1p1:InteractionType QCD
#set QtoQBcSplit1p1:O1 10.
do SplittingGenerator:AddFinalSplitting c->b,B_c+; QtoQBcSplit1p1
do SplittingGenerator:AddFinalSplitting b->c,B_c-; QtoQBcSplit1p1

do /Herwig/Shower/SplittingGenerator:DeleteFinalSplitting g->u,ubar; /Herwig/Shower/GtoQQbarSudakov
do /Herwig/Shower/SplittingGenerator:DeleteFinalSplitting g->d,dbar; /Herwig/Shower/GtoQQbarSudakov
do /Herwig/Shower/SplittingGenerator:DeleteFinalSplitting g->s,sbar; /Herwig/Shower/GtoQQbarSudakov
do /Herwig/Shower/SplittingGenerator:DeleteFinalSplitting g->c,cbar; /Herwig/Shower/GtoccbarSudakov
do /Herwig/Shower/SplittingGenerator:DeleteFinalSplitting g->t,tbar; /Herwig/Shower/GtoQQbarSudakov
do /Herwig/Shower/SplittingGenerator:DeleteFinalSplitting g->g,g; /Herwig/Shower/GtoGGSudakov
do /Herwig/Shower/SplittingGenerator:DeleteFinalSplitting b->b,g; /Herwig/Shower/QtoQGSudakov
do /Herwig/Shower/SplittingGenerator:DeleteFinalSplitting g->b,bbar; /Herwig/Shower/GtobbbarSudakov


set ShowerHandler:HardEmission 0

cd /Herwig/Generators
saverun EE EventGenerator
